    "retext-stringify": "2.0.0",
    "retext-syntax-mentions": "1.1.4",
    "retext-syntax-urls": "1.0.0",
    "shx": "0.3.2",
    "stylelint": "9.3.0",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-styled-components": "0.1.1",
