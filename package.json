{
  "name": "unindented-next",
  "productName": "Unindented",
  "description": "Home of Daniel Perez Alvarez",
  "homepage": "https://unindented.org",
  "backgroundColor": "#f8f9fa",
  "themeColor": "#212529",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Daniel Perez Alvarez",
    "email": "daniel@unindented.org",
    "url": "https://unindented.org",
    "github": "unindented",
    "twitter": "unindented"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unindented/unindented-next.git"
  },
  "scripts": {
    "clean:cache": "shx rm -rf node_modules/.cache",
    "clean:next": "shx rm -rf .next",
    "clean:out": "shx rm -rf out",
    "clean": "run-p clean:*",
    "test:eslint": "eslint .",
    "test:stylelint:css": "stylelint --config .stylelintrc.css.json \"pages/**/*.css\"",
    "test:stylelint:js": "stylelint --config .stylelintrc.js.json \"lib/components/**/*.js\"",
    "test": "run-s test:**",
    "next:dev": "next",
    "next:start": "next start",
    "next:build": "next build",
    "next:export": "next export",
    "contents:process": "node lib/process-contents",
    "contents:copy": "node lib/copy-contents",
    "watch:contents": "nodemon --watch contents --ext md lib/process-contents",
    "watch": "run-p watch:*",
    "dev": "run-p next:dev watch:contents",
    "start": "run-s clean contents:process next:build next:start",
    "export": "run-s clean contents:process next:build next:export contents:copy",
    "postexport:webp": "find out -name '*.png' | parallel cwebp -q 90 -lossless {} -o {.}.webp",
    "postexport:static": "shx mv out/static/*.* out/",
    "postexport:htaccess": "shx mv out/static/htaccess out/.htaccess",
    "postexport:sw": "shx cp .next/service-worker.js out/",
    "postexport:minify": "html-minifier --config-file .htmlrc.json --input-dir out/ --output-dir out/ --file-ext html",
    "postexport": "run-s postexport:**",
    "deploy:out": "rsync --archive --delete out/",
    "deploy:dev": "run-s export \"deploy:out -- unindented:/home/unindented/dev.unindented.org/\"",
    "deploy:prod": "run-s export \"deploy:out -- unindented:/home/unindented/unindented.org/\"",
    "screenshot": "node lib/screenshot / /about/ /about/style-guide/",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "lint-staged": {
    "*.{css,js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "mineral-ui-tokens": "0.3.0",
    "modular-scale": "5.1.0",
    "next": "6.1.1",
    "normalize.css": "8.0.0",
    "prop-types": "15.6.2",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "rehype-react": "3.0.2",
    "styled-components": "3.3.3",
    "unified": "7.0.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.6",
    "babel-plugin-inline-import": "3.0.0",
    "babel-plugin-styled-components": "1.5.1",
    "babel-plugin-transform-define": "1.3.0",
    "chalk": "2.4.1",
    "eslint": "5.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.10.0",
    "fast-glob": "2.2.2",
    "front-matter": "2.3.0",
    "fs-extra": "7.0.0",
    "gh-pages": "1.2.0",
    "html-minifier": "3.5.19",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "lodash": "4.17.10",
    "mermaid.cli": "0.5.1",
    "nodemon": "1.18.3",
    "npm-run-all": "4.1.3",
    "puppeteer": "1.6.0",
    "pushstate-server": "3.0.1",
    "prettier": "1.13.7",
    "rehype-autolink-headings": "2.0.2",
    "rehype-highlight": "2.1.0",
    "rehype-katex": "1.1.1",
    "rehype-picture": "1.0.1",
    "rehype-raw": "2.0.0",
    "rehype-slug": "2.0.1",
    "remark-abbr": "1.1.2",
    "remark-grid-tables": "1.0.13",
    "remark-iframes": "3.0.1",
    "remark-kbd": "1.0.12",
    "remark-math": "1.0.4",
    "remark-parse": "5.0.0",
    "remark-rehype": "3.0.0",
    "remark-retext": "3.1.0",
    "remark-stringify": "5.0.0",
    "remark-sub-super": "1.0.11",
    "retext-contractions": "2.1.2",
    "retext-diacritics": "1.2.1",
    "retext-english": "3.0.0",
    "retext-equality": "3.3.0",
    "retext-indefinite-article": "1.1.4",
    "retext-intensify": "3.0.1",
    "retext-passive": "1.3.0",
    "retext-profanities": "4.4.0",
